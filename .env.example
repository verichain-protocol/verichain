# ===============================================================================
# VERICHAIN ENVIRONMENT CONFIGURATION
# ===============================================================================
# Copy this file to .env and update values as needed
# Run: cp .env.example .env

# ===============================================================================
# DFX CANISTER ENVIRONMENT VARIABLES
# ===============================================================================
# These are automatically generated by DFX - DO NOT MODIFY MANUALLY
# They will be overwritten when you run: dfx deploy

DFX_VERSION='0.28.0'
DFX_NETWORK='local'

# Canister IDs (Generated automatically by DFX)
CANISTER_ID_AI_CANISTER='your-ai-canister-id'
CANISTER_ID_FRONTEND='your-frontend-canister-id' 
CANISTER_ID_INTERNET_IDENTITY='your-internet-identity-canister-id'
CANISTER_ID_LOGIC_CANISTER='your-logic-canister-id'
CANISTER_ID='your-default-canister-id'

# Candid Interface Path (Generated automatically)
CANISTER_CANDID_PATH='/path/to/your/workspace/.dfx/local/canisters/ai_canister/ai_canister.did'

# END DFX CANISTER ENVIRONMENT VARIABLES

# ===============================================================================
# VERICHAIN MODEL CONFIGURATION
# ===============================================================================

# Model Chunking Configuration
# Chunk size for model splitting (in MB)
# Recommended: 0.8MB for optimal ICP compatibility
# Valid range: 0.1 - 2.0 MB
MODEL_CHUNK_SIZE_MB=0.8

# Model Download Configuration  
# URL to download the ONNX model for deepfake detection
# This should point to your trained model file
MODEL_DOWNLOAD_URL='https://huggingface.co/einrafh/verichain-deepfake-models/resolve/main/models/onnx/verichain-model.onnx'

# ===============================================================================
# DEPLOYMENT CONFIGURATION (Optional)
# ===============================================================================

# Network Configuration
# Options: local, ic (Internet Computer mainnet), playground
DEPLOY_NETWORK=local

# Frontend Configuration
# Base URL for frontend deployment
# FRONTEND_BASE_URL=http://localhost:4943

# AI Model Configuration
# MODEL_VERSION=1.0.0
# MODEL_CONFIDENCE_THRESHOLD=0.7
# MAX_FILE_SIZE_IMAGE_MB=10
# MAX_FILE_SIZE_VIDEO_MB=50

# ===============================================================================
# DEVELOPMENT CONFIGURATION (Optional)
# ===============================================================================

# Debug Configuration
# DEBUG_MODE=false
# LOG_LEVEL=info

# Testing Configuration
# TEST_MODEL_PATH=./test-assets/test-model.onnx
# ENABLE_MOCK_MODEL=false

# ===============================================================================
# SECURITY CONFIGURATION (Optional)
# ===============================================================================

# API Keys (if needed for external services)
# HUGGINGFACE_API_KEY=your-api-key-here
# EXTERNAL_API_KEY=your-external-api-key

# Rate Limiting
# MAX_REQUESTS_PER_MINUTE=60
# MAX_CONCURRENT_ANALYSES=5

